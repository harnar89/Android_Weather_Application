<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrolldetails"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:paddingBottom="20dp"
    android:paddingTop="65dp"
    android:scrollbarStyle="insideInset">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".details"
        tools:showIn="@layout/activity_details">
        <LinearLayout
            android:id="@+id/LinearLayoutSummary"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="40px"
            android:paddingTop="0px">
        <TextView
                android:id="@+id/detailssummary"
                android:layout_width="960px"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="20px"
                android:paddingTop="300px"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="80px"
                android:textStyle="normal"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayoutTabs"
            android:layout_below="@+id/LinearLayoutSummary"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="40px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            >
        <Button
            android:id="@+id/hoursButton"
            android:layout_height="150px"
            android:layout_width="400px"
            android:text="NEXT 24 HOURS"
            android:layout_marginRight="30px"
            android:background="@drawable/normalbuttons"
            />
        <Button
            android:id="@+id/daysButton"
            android:layout_height="150px"
            android:layout_width="400px"
            android:text="NEXT 7 DAYS"
            android:layout_marginRight="30px"
            android:background="@drawable/normalbuttons"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayoutFirst"
            android:layout_below="@+id/LinearLayoutTabs"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="30px"
            android:paddingTop="30px"
            >
            <TableLayout
                android:id="@+id/table_hours"
                android:layout_width="960px"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="20px">
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayoutSecond"
            android:layout_below="@+id/LinearLayoutTabs"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="0px"
            android:paddingTop="0px"
            >
        <TableLayout
            android:id="@+id/daysTable"
            android:layout_width="960px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"
            android:paddingTop="20px">
        </TableLayout>
        </LinearLayout>

</RelativeLayout>
</ScrollView>

